<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameResultLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/win_color"
    android:elevation="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gameResultIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/winner" />

    <TextView
        android:id="@+id/gameResultTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="!...Congratulations...!"
        android:textColor="#E9EBED"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gameResultBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/play_again_btn"
        android:padding="15dp"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Play again"
        android:textColor="@color/white"
        tools:ignore="UnusedAttribute" />
</LinearLayout>